
<div class="col s12 m12 l12 exit-card">
  <div class="card blue-club">
    <div class="card-content white-text">
      <div class="row">
        <div class="col s8 m10 l10">
          <span class="card-title"><%= exit.title %></span>
        </div>
        <div class="col s2 m1 l1 no_bg_color">
          <%= render "shared/global/action-btn", url: "/exits/#{exit.id}/edit", variable_data: @exit, title: "Mettre Ã  jour" %>
