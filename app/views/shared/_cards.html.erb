
<div class="col s12 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="row">
        <div class="col s10">
          <span class="card-title"><%= exit.title %></span>
        </div>
        <%= render "shared/action-btn", url: "/articles/#{exit.id}",variable_data: @exit, title: "Supprimer" %>
        <div class="col s1">
          <%= link_to edit_exit_path(exit), class: "icon waves-light right" do %>
            <i class="material-icons ">
              create
            </i>
          <% end %>
        </div>
        <p class="col s12"><%= exit.description %></p>
      </div>
    </div>
    <div class="card-action row col s12">
      <div class="col s6"><span class="info-title">Lieu : </span><span class="info"><%= exit.city%></span></div>
      <div class="col s6"><span class="info-title">Date : </span><span class="info"><%= exit.date.strftime('%d/%m/%Y') %></span></div>
    </div>
  </div>
</div>
