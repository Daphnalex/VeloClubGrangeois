<div class="container-fluid page-content session-page">
  <div class="row">
    <div class="col s0 m3 l3"></div>
    <div class ="col s12 m6 l6 connexion-box">
      <h1>Connexion</h1>
      <div class="row">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :mot_de_passe %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field login">
              <%= f.check_box :remember_me %>
              <%= f.label :mÃ©moriser %>
            </div>
          <% end %>
          <br/>
          <div class="actions">
            <%= f.submit "Se connecter" %>
          </div>
          <% end -%>
        </div>
        <div class="signin_links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
