<div class="container page-content album_page">
  <div class="row">
    <div class="row">
      <div class="col m10">
        <%= render "shared/global/return-btn", url: "/users/#{@user.id}", title: "Retour à mes informations#{@for_admin ? '' : ' personnelles'}" %>
      </div>
    </div>
    <div class="col s11 m11 l11">
      <h1><%= @for_admin ? "Mettre à jour le membre" : "Mettre à jour mes informations" %></h1>
    </div>
  </div>
  <div class="row">
    <%= render "shared/user/edit_user" %>
  </div>
  <div class="row">
    <div class="col s11 m11 l11">
      <h1>Changer mon mot de passe</h1>
    </div>
    <div class="col s12 m12 l12">
      <%= render "shared/user/change_password" %>
    </div>
  </div>
</div>
